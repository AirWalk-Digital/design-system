{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es5",
    "allowJs": true,
    // "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "bundler",
    "noEmit": false,
    "noEmitOnError": false,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* If transpiling with TypeScript: */
    "module": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "baseUrl": "./", // Ensure baseUrl is set to the root directory
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/lib/*": ["src/lib/*"],
      "@/styles/*": ["src/styles/*"]
    },
    "jsx": "react-jsx", // or "react" if using React 16 or below
    "declaration": true, // Ensure declaration files are generated
    "declarationDir": "dist" // Optional: specify a directory for declaration files
  },
  "exclude": [
    "./out/**/*",
    "./node_modules/**/*",
    "./jest.config.ts",
    "./.next/**/*",
    "./dist/**/*"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".storybook/*.ts",
    ".next/types/**/*.ts",
    "src/lib/Env.mjs",
    "src/*.d.ts"
  ]
}
